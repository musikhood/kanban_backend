<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Board\Domain\Entity\Board" table="board" repository-class="App\Board\Infrastructure\Repository\BoardRepository">
        <id name="id" type="guid" column="id" length="36" />

        <field name="name" type="text" column="name" length="255" />
        <field name="user" type="guid" column="user" length="36" />
    </entity>

</doctrine-mapping>
