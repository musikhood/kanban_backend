<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Board\Domain\Entity\Board" table="board" repository-class="App\Board\Infrastructure\Repository\BoardRepository">
        <id name="id" type="guid" column="id" length="36" />

        <one-to-many field="columns" target-entity="App\Board\Domain\Entity\Column" mapped-by="board">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <many-to-one
            field="user"
            target-entity="App\User\Domain\Entity\User"
            inversed-by="boards"
        >
            <join-column nullable="false" />
        </many-to-one>

        <embedded name="name" class="App\Board\Domain\Entity\BoardName"  use-column-prefix="false" />
    </entity>

</doctrine-mapping>
